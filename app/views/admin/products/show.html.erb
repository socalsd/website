<p id="notice"><%= notice %></p>

<div class="shop-latest">
  <div class="tabbable">
    <div class="tab-content">
      <div class="shop-latest-carousel">
        <ul>
          <%= render "shared/product_list_item", :product => @product %>
        </ul>
      </div>
    </div>
  </div>
</div>

<dl>
  <dt>Manufacturer</dt>
  <%= content_tag(:dd, @product.manufacturer.name) %>
  <dt>Category</dt>
  <%= content_tag(:dd, @product.category.name) %>
  <dt>Size</dt>
  <%= content_tag(:dd, @product.size) %>
</dl>

<%= link_to 'Edit', edit_admin_product_path(@product) %> |
<%= link_to 'Back', admin_products_path %>
