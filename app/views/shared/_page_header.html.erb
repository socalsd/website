  						<!-- li>Historic page</li -->
						</ul>
						<%= content_tag(:span, Time.now.strftime("%A %b %-d, %Y"), :id => "current-date") %>						
					</div>
					<div class="span6">
						<div class="header-titles">
							<%= content_tag(:h2, @header_title) %> 
							<!-- h4>A brief timeline of moments that marked our company.</h4 -->
						</div>
					</div>
				</div><!-- end row -->
			</div>
			
			<div class="zn_header_bottom_style"></div>
		</div><!-- end page_header -->