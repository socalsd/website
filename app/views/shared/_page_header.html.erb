<div id="page_header" class="uh_pages_-_background_3_style bottom-shadow" style="min-height:200px">
			<div class="bgback"></div>
			
			<div data-images="http://hogash-demo.com/kallyas_wp/wp-content/themes/kallyas/images/" id="sparkles"></div>
			
			
			
			<div class="container">
				<div class="row">
					<div class="span6">
						<ul xmlns:v="http://rdf.data-vocabulary.org/#" class="breadcrumbs fixclear">
						  <% @breadcrumbs.each do |crumb| %>
						    <li typeof="v:Breadcrumb">
						      <%= link_to_if crumb[1], crumb[0], crumb[1], :rel => "v:url", :property => "v:title" %>
						    </li>
						  <% end %>
						  <!-- li typeof="v:Breadcrumb"><a rel="v:url" property="v:title" href="http://hogash-demo.com/kallyas_wp">Home</a></li -->
